<template name="getEventTeamsAttendees" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="eventId" description="Id of the event"/>
    <parameter name="teamId" description="Id of the team"/>
    <sequence>
        <property name="uri.var.eventId" expression="$func:eventId"/>
        <property name="uri.var.teamId" expression="$func:teamId"/>
        <call>
            <endpoint>
                <http method="get"
                      uri-template="{uri.var.eventbrite.apiUrl}/events/{uri.var.eventId}/teams/{uri.var.teamId}/attendees/?token={uri.var.eventbrite.accessToken}"/>
                <property name="Accept" value="*/*" scope="transport"/>
            </endpoint>
        </call>
    </sequence>
</template>